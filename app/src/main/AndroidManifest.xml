<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.programming.kantech.bakingmagic.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.activities.Activity_Main"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Provider -->
        <provider
            android:name=".provider.Provider_BakingMagic"
            android:authorities="com.programming.kantech.bakingmagic.app"
            android:exported="false" />

        <activity
            android:name=".views.activities.Activity_Details"
            android:launchMode="singleTop"
            android:parentActivityName=".views.activities.Activity_Main">
            <meta-data
                android:name="andriod.support.PARENT_ACTIVITY"
                android:value=".Activity_Main" />
        </activity>
        <activity
            android:name=".views.activities.Activity_Ingredients"
            android:label="@string/app_ingredients"
            android:parentActivityName=".views.activities.Activity_Details">
            <meta-data
                android:name="andriod.support.PARENT_ACTIVITY"
                android:value=".Activity_Details" />
        </activity>
        <activity android:name=".views.activities.Activity_Step"
            android:parentActivityName=".views.activities.Activity_Details">

            <meta-data
                android:name="andriod.support.PARENT_ACTIVITY"
                android:value=".Activity_Step" />

        </activity>
    </application>

</manifest>